" 2-space indents
set shiftwidth=2
" tab key for indentation
set smarttab
" only use space chars
set expandtab
set tabstop=8 softtabstop=0

set spell

" {visual}gq to format selected line(s)
" gqq to format current line

" line wrapping shenanigans
set linebreak
set breakat=^I!@*-+;:,./?
set textwidth=80
set wrapmargin=1
set formatoptions+=t
set formatoptions-=l

