alias dfa='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME add'
alias dfau='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME add -u'
alias dfcm='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME commit -m'
alias dfd='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME diff'
alias dfps='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME push'
alias dfpl='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME pull'

